[alias]
    br = branch
    chp=cherry-pick
    ci = commit
    cia=commit --amend
    co = checkout
    df = diff
    hist = log --pretty=format:'%h   |   %ad  |    %s%d [%an]' --graph --date=short
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    lg = log -p
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    st = status
    w = whatchanged

[color]
	ui = true
    pager = true
    diff = auto
    branch = auto
    status = auto
    interactive = auto

[color "branch"]
    current = green  
    local = cyan bold
    remote = red

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[gitflow "prefix"]
	feature = feature-
	release = release-
	hotfix = hotfix-
	support = support-
	versiontag = v

[merge]
	tool = vimdiff
    conflictstyle = diff3
    ff = false

[mergetool]
    prompt = false

[push]
    default = simple

[user]
	name = "%USER%"
	email = "%USERMAIL%"

